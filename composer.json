{
    "name": "elliottlawson/mcp-php-sdk",
    "description": "PHP SDK for Model Context Protocol",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Elliott Lawson"
        }
    ],
    "autoload": {
        "psr-4": {
            "ElliottLawson\\McpPhpSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElliottLawson\\McpPhpSdk\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "psr/log": "^3.0",
        "psr/http-message": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "ramsey/uuid": "^4.2",
        "react/promise": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "justinrainbow/json-schema": "^5.2"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "minimum-stability": "stable"
}
